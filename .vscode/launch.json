  "version": "0.2.0",
  "configurations": [
    {
      "name": "Docker: Attach to Node",
      "type": "node",
      "request": "attach",
      "port": 9239,
      "address": "localhost",
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/app",
      "protocol": "inspector",
      "restart": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "outputCapture": "std",
      "env": {
        "NODE_ENV": "development",
      },
      "program": "${workspaceFolder}/src/index.js"
    }
  ]
}